<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Opis</th>
      <th>Cena</th>
      <th>Czas przygotowania</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produkts.each do |produkt| %>
      <tr>
        <td><%= produkt.nazwa_produktu %></td>
        <td><%= produkt.opis_produktu %></td>
        <td><%= produkt.cena %></td>
        <td><%= produkt.czas_przygotowania %></td>
