<p id="notice"><%= notice %></p>

<h1>Lista użytkowników</h1>

<table>
  <thead>
    <tr>
      <th>Imie</th>
      <th>Nazwisko</th>
      <th>Adres</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uzytkowniks.each do |uzytkownik| %>
      <tr>
        <td><%= uzytkownik.imie %></td>
        <td><%= uzytkownik.nazwisko %></td>
        <td><%= uzytkownik.kod_pocztowy_u %> ul. <%= uzytkownik.ulica_u %> <%= uzytkownik.nr_budynku_u %>/<%= uzytkownik.nr_mieszkania_u %></td>
        <td><%= link_to 'Show', uzytkownik %></td>
        <% if logged_in? %>
        <td><%= link_to 'Edit', edit_uzytkownik_path(uzytkownik) %></td>
        <td><%= link_to 'Destroy', uzytkownik, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %><% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
<%= link_to 'New Uzytkownik', new_uzytkownik_path %>
<% end %>
